<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/recruit_edit_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_company_logo" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/RecruitIconStyle"
                android:src="@drawable/icon_recruit_company" />

            <EditText
                android:id="@+id/recruit_edit_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gray"
                android:hint="기업명"
                android:inputType="text"
                android:maxLines="1"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/RecruitIconStyle"
                android:src="@drawable/icon_recruit_pattern" />

            <RadioGroup
                android:id="@+id/recruit_edit_pattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/recruit_edit_pattern_newcomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:text="신입" />

                <RadioButton
                    android:id="@+id/recruit_edit_pattern_intern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:text="인턴" />

                <RadioButton
                    android:id="@+id/recruit_edit_pattern_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:text="계약" />

                <RadioButton
                    android:id="@+id/recruit_edit_pattern_career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:text="경력" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/RecruitIconStyle"
                android:src="@drawable/icon_recruit_job" />

            <EditText
                android:id="@+id/recruit_edit_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gray"
                android:hint="직무"
                android:inputType="text"
                android:maxLines="1"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/RecruitIconStyle"
                android:src="@drawable/icon_recruit_schedule" />

            <TextView
                android:id="@+id/recruit_edit_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gray"
                android:hint="날짜"
                android:padding="5dp" />

            <Spinner
                android:id="@+id/recruit_edit_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_gray"
                android:dropDownSelector="@color/colorPrimary"
                android:dropDownWidth="80dp"
                android:gravity="center"
                android:padding="5dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/recruit_edit_schedule_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gray"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="마감" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/RecruitIconStyle"
                android:src="@drawable/icon_recruit_process" />

            <RadioGroup
                android:id="@+id/recruit_edit_process_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/recruit_edit_process_ing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:text="진행중" />

                <RadioButton
                    android:id="@+id/recruit_edit_process_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:text="합격" />

                <RadioButton
                    android:id="@+id/recruit_edit_process_fail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorAccent"
                    android:text="불합격" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/RecruitIconStyle"
                android:src="@drawable/icon_recruit_link" />

            <EditText
                android:id="@+id/recruit_edit_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gray"
                android:hint="채용공고 URL"
                android:inputType="text"
                android:maxLines="1"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                style="@style/RecruitIconStyle"
                android:src="@drawable/icon_recruit_memo" />

            <EditText
                android:id="@+id/recruit_edit_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gray"
                android:hint="메모"
                android:inputType="text"
                android:maxLines="1"
                android:padding="5dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="광고 자리"
        android:textColor="#ffffff" />
</LinearLayout>